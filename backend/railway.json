{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "**/*.php",
            "composer.json",
            "composer.lock",
            "railway.json",
            "nixpacks.toml",
            ".env.production"
        ]
    },
    "deploy": {
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}
