{
  "phases": {
    "setup": {
      "nixPkgs": ["php82", "php82Packages.composer"]
    },
    "install": {
      "cmds": ["composer install --optimize-autoloader --no-dev"]
    },
    "build": {
      "cmds": [
        "chmod +x init-db.sh",
        "php artisan config:cache",
        "php artisan route:cache",
        "php artisan view:cache"
      ]
    }
  },
  "start": {
    "cmd": "bash start.sh"
  }
}
